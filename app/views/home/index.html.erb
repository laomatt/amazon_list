<form action="#" id="search-bar">
  <input type="text" name="search[keywords]">
  <input type="submit" value="search">
</form>

<div class="results">
  <ul id="result-list">

  </ul>
</div>

<script>
  $("body").on('submit', '#search-bar', function(event) {
    event.preventDefault();
    $("#result-list").html("Loading");
    $.ajax({
      url: '/home/search',
      data: $(this).serialize(),
    })
    .done(function(data) {
      var results = data.data.ItemSearchResponse.Items.Item
      $("#result-list").html("");
      $.each(results, function(index, val) {
        debugger
        var html = "<div class='col-md-8 item-show list-group'><div class='pic-box'><a href='"+val.DetailPageURL+"' target='_blank'><img src='"+val.LargeImage.URL+"'></div><div class='desc-box'><b><br>"+val.ItemAttributes.Title+"</b><br>by: "+val.ItemAttributes.Author+"<br><p>"
        var array_links = val.ItemLinks.ItemLink
        $.each(array_links, function(index, link) {
          html +="<a href='"+link.URL+"' target='_blank'>"+link.Description+"</a>, "
        });
        html += "</p></div></div>"
        $("#result-list").append(html)

      });
    })

  });
</script>

<style>
  .item-show {
    position: relative;
    padding: 2%;
    background-color: #F3F3CE;
    height: 100;
    margin: 10px;
  }

  .pic-box {
    position: relative;
    float: left;
    width: 20%;
  }

  .pic-box img {
    max-height: 70px;
  }

  .desc-box {
    position: relative;
    float: right;
    width: 80%;
    text-align: left;
  }

</style>
